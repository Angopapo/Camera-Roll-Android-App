<resources>
    <!--Base Theme-->
    <style name="Theme.CameraRoll" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentNavigation">@bool/show_nav_bar</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.CameraRoll.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="colorAccent">@color/colorAccent_light</item>

        <item name="android:windowTranslucentNavigation">@bool/show_nav_bar</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <!--PhotoView Theme-->
    <style name="Theme.CameraRoll.PhotoView" parent="Theme.CameraRoll">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowSharedElementEnterTransition">@transition/album_item_transition
        </item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_translucent1</item>
    </style>

    <style name="Theme.CameraRoll.Light.PhotoView" parent="Theme.CameraRoll.Light">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowSharedElementEnterTransition">@transition/album_item_transition
        </item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_translucent1</item>
    </style>

    <!--VideoPlayer Theme-->
    <style name="Theme.CameraRoll.VideoPlayer" parent="Theme.CameraRoll">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_translucent1</item>
    </style>

    <style name="Theme.CameraRoll.Light.VideoPlayer" parent="Theme.CameraRoll.Light">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_translucent1</item>
    </style>

    <!--SettingsActivity Theme-->
    <style name="Theme.CameraRoll.Settings" parent="Theme.CameraRoll">
        <item name="android:windowBackground">@null</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="Theme.CameraRoll.Light.Settings" parent="Theme.CameraRoll.Light">
        <item name="android:windowBackground">@null</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!--ExifEditor Theme-->
    <style name="Theme.CameraRoll.ExifEditor" parent="Theme.CameraRoll">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Theme.CameraRoll.Light.ExifEditor" parent="Theme.CameraRoll.Light">
        <item name="android:windowBackground">@null</item>
    </style>

    <!--EditImage Theme-->
    <style name="Theme.CameraRoll.EditImage" parent="Theme.CameraRoll">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!--SetWallpaper Theme-->
    <style name="Theme.CameraRoll.SetWallpaper" parent="Theme.CameraRoll">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>
