<?xml version="1.0" encoding="utf-8"?>
<us.koller.cameraroll.ui.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/cards_style_grid_spacing"
        android:foreground="@drawable/ripple"
        android:stateListAnimator="@animator/lift_up"
        app:cardElevation="2dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/image"
            android:scaleType="centerCrop" />

        <include layout="@layout/album_title_excluded" />
    </android.support.v7.widget.CardView>
</us.koller.cameraroll.ui.widget.SquareRelativeLayout>
